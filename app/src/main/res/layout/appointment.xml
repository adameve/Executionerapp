<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffa500"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/texttext"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:text="Please Select the appropriate city and Region:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spincity"
            style="@style/spinner_style"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/texttext1"
            android:layout_toEndOf="@+id/texttext3"
            android:layout_toRightOf="@+id/texttext3" />

        <TextView
            android:id="@+id/texttext1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/texttext"
            android:layout_marginTop="10dp"
            android:text="City:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinregion"
            style="@style/spinner_style"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/spincity"
            android:layout_toEndOf="@+id/texttext3"
            android:layout_toRightOf="@+id/texttext3" />

        <TextView
            android:id="@+id/texttext2"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/spinregion"
            android:text="Region:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edt_on_date2"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinregion"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:background="@drawable/edittextborder"
            android:hint="Select Date"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#545454" />


        <Button
            android:id="@+id/btn_date2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/edt_on_date2"
            android:layout_toEndOf="@+id/edt_on_date2"
            android:layout_toRightOf="@+id/edt_on_date2"
            android:layout_weight="0.20"
            android:background="@drawable/calendar"
            android:gravity="left|center" />


        <Spinner
            android:id="@+id/spinslot"
            style="@style/spinner_style"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/btn_date2"
            android:layout_alignRight="@+id/btn_date2"
            android:layout_below="@+id/edt_on_date2"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/texttext3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinslot"
            android:layout_marginTop="10dp"
            android:text="Attendees:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/texttext4"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/texttext3"
            android:layout_marginTop="10dp"
            android:text="Owner:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinowner"
            style="@style/spinner_style"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/texttext4" />

        <TextView
            android:id="@+id/texttext5"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/texttext4"
            android:layout_alignBottom="@+id/texttext4"
            android:layout_alignEnd="@+id/spincity"

            android:layout_alignRight="@+id/spincity"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:text="Tenant:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spintenant"
            style="@style/spinner_style"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/texttext5"
            android:layout_toRightOf="@+id/spinowner" />


        <Spinner
            android:id="@+id/spinW2"
            style="@style/spinner_style"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@+id/texttext6"
            android:layout_toEndOf="@+id/spinO1"
            android:layout_toRightOf="@+id/spinO1" />

        <Spinner
            android:id="@+id/spinO1"
            style="@style/spinner_style"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/texttext7" />


        <TextView
            android:id="@+id/texttext6"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/texttext7"
            android:layout_alignBottom="@+id/texttext7"
            android:layout_alignLeft="@+id/texttext5"


            android:layout_alignStart="@+id/texttext5"
            android:text="Witness:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/texttext7"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinowner"


            android:layout_marginTop="28dp"
            android:text="Anulomwitness"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnupdate2"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/spinpoa"
            android:layout_alignStart="@+id/spinpoa"
            android:layout_below="@+id/spinpoa"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="CONFIRM BOOKING"
            android:textColor="@color/cardview_light_background" />

        <Spinner
            android:id="@+id/spinpoa"
            style="@style/spinner_style"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/texttext8"
            android:layout_toLeftOf="@+id/spinW2"
            android:layout_toStartOf="@+id/spinW2" />

        <TextView
            android:id="@+id/texttext8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnupdate2"
            android:layout_alignStart="@+id/btnupdate2"
            android:layout_below="@+id/spinO1"
            android:layout_marginTop="11dp"
            android:text="POA"
            android:textColor="#000000" />

    </RelativeLayout>

</ScrollView>