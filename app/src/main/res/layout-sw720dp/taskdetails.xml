<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#ffffff">

    <TextView
        android:id="@+id/tvreportKey"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerVertical="true"

        android:textColor="#ff0000"
        android:textColorLink="#ff0000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvdate1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tvreportKey"
        android:textColor="#000000"
        android:textSize="15dp" >
    </TextView>


    <TextView
        android:id="@+id/tvstatus1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvdate1"
        android:textColor="#000080"
        android:textSize="15dp" >
    </TextView>

    <ImageView
        android:id="@+id/imgSyncStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@id/tvstatus1">
    </ImageView>


    <TextView
        android:id="@+id/tvowner1"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="73dp"
        android:layout_toRightOf="@id/imgSyncStatus"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvtenant1"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:layout_toRightOf="@id/tvowner1"
        android:textColor="#000000"
        android:textSize="15dp" />




    <TextView
        android:id="@+id/tvcomment1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/tvtenant1"
        android:textColor="#000080"
        android:gravity="center"
        android:textColorLink="#ff0000"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/imgCommmentSyncStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/tvcomment1">
    </ImageView>

    <TextView
        android:id="@+id/tvAddpay1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/imgCommmentSyncStatus"
        android:textColor="#000080"
        android:textColorLink="#ff0000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvACVR1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@id/tvAddpay1"
        android:textColor="#000080"
        android:gravity="center"
        android:textColorLink="#ff0000"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/imgACVRSyncStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"

        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/tvACVR1">
    </ImageView>

    <TextView
        android:id="@+id/tvMap1"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"

        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@id/imgACVRSyncStatus"
        android:textColor="#000080"
        android:textColorLink="#ff0000"
        android:textSize="15dp" />

</RelativeLayout>
    </android.support.v7.widget.CardView>
</HorizontalScrollView>